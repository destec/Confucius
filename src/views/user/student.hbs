<form id="pagerForm" method="post" action="">
	<!-- <input type="hidden" name="status" value="${param.status}"> -->
	<!-- <input type="hidden" name="keywords" value="${param.keywords}" /> -->
	<input type="hidden" name="pageNum" value="1" />
	<input type="hidden" name="numPerPage" value="{{count}}" />
	<!-- <input type="hidden" name="orderField" value="${param.orderField}" /> -->
</form>

<div class="pageHeader">
	<form onsubmit="return navTabSearch(this);" action="" method="post">
	<div class="searchBar">
		<table class="searchContent">
			<tr>
				<td>
					我的客户：<input type="text" name="keyword" />
				</td>
			</tr>
		</table>
		<div class="subBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div></li>
			</ul>
		</div>
	</div>
	</form>
</div>
<div class="pageContent">
	<div class="panelBar">
		<ul class="toolBar">
			<li><a class="add" href="/user/students/create" target="dialog" rel="admin_create" title="添加" refresh=true><span>添加</span></a></li>
			<li><a class="delete" href="/user/students/delete?uid={sid_user}" target="ajaxTodo" title="确定要删除吗?"><span>删除</span></a></li>
			<li><a class="edit" href="/user/students/edit?uid={sid_user}" target="dialog" rel="admin_edit" mask="true" title="修改"><span>修改</span></a></li>
		</ul>
	</div>
	<table class="table" width="100%" layoutH="138">
		<thead>
			<tr>
				<th width="120">学生学号</th>
				<th>学生姓名</th>
				<th>班级</th>
				<th width="150">创建时间</th>
				<th width="150">更新时间</th>
			</tr>
		</thead>
		<tbody>
			{{#each students}}
				<tr target="sid_user" rel={{id}}>
					<td>{{code}}</td>
					<td>{{name}}</td>
					<td>{{className}}</td>
					<td>{{createdAt}}</td>
					<td>{{updatedAt}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	<div class="panelBar">
		<div class="pages">
			<span>共{{count}}条</span>
		</div>

		<div class="pagination" targetType="navTab" totalCount={{count}} numPerPage="20" pageNumShown="10" currentPage="1"></div>

	</div>
</div>
