<form id="pagerForm" method="post" action="">
	<input type="hidden" name="pageNum" value="1" />
</form>


<div class="pageHeader">
	<form onsubmit="return navTabSearch(this);" action="demo_page1.html" method="post">
	<div class="searchBar">
		<table class="searchContent">
			<tr>
				<td>
					院系名称: <input type="text" name="keyword" />
				</td>
			</tr>
		</table>
		<div class="subBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div></li>
			</ul>
		</div>
	</div>
	</form>
</div>
<div class="pageContent">
	<div class="panelBar">
		<ul class="toolBar">
			<li><a class="add" href="/department/colleges/create" target="dialog"><span>添加</span></a></li>
			<li><a class="delete" href="/department/colleges/delete?uid={sid_uid}" target="ajaxTodo" title="确定要删除吗?"><span>删除</span></a></li>
			<li><a class="edit" href="/department/colleges/edit?uid={sid_uid}" target="dialog"><span>修改</span></a></li>
		</ul>
	</div>
	<table class="table" width="100%" layoutH="138">
		<thead>
			<tr>
				<th width="120">院系名称</th>
				<th width="80">创建时间</th>
				<th width="80">更新时间</th>
			</tr>
		</thead>
		<tbody>
			{{#each colleges}}
				<tr target="sid_uid" rel={{id}}>
					<td>{{name}}</td>
					<td>{{createdAt}}</td>
					<td>{{updatedAt}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	<div class="panelBar">
		<div class="pages">
			<span>共{{count}}条</span>
		</div>

		<div class="pagination" targetType="navTab" totalCount={{count}} numPerPage="20" pageNumShown="10" currentPage="1"></div>

	</div>
</div>
