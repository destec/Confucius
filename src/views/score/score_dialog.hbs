
<div class="pageContent">
	<form method="post" action="/score/scores/create" class="pageForm required-validate" onsubmit="return validateCallback(this, navTabAjaxDone);">
		<div class="pageFormContent" layoutH="56">
			<p>
				<label>学生学号: </label>
				<input id="studentId" name="student.id" value="" type="hidden"/>
				<input class="required" name="student.code" type="text" postField="keyword" suggestFields="code,className,name"
					suggestUrl="/user/students/lookup" lookupGroup="student" size="30"/>
				<a class="btnLook" href="/user/students/lookup" lookupGroup="student">查找带回</a>
			</p>
			<p>
				<label>学生姓名: </label>
				<input name="student.name" class="readonly" readonly="readonly" type="text" size="30" alt=""/>
			</p>
      <p>
        <label>学生班级: </label>
				<input name="student.className" type="text" class="readonly" readonly="readonly" size="30" alt=""/>
      </p>
      <p>
        <label>加减分原因: </label>
				<input id="typeId" name="type.id" value="" type="hidden"/>
				<input class="required" name="type.name" type="text" postField="keyword" suggestFields="name,score"
					suggestUrl="/category/types/lookup" lookupGroup="type" size="30"/>
      </p>
      <p>
        <label>分值: </label>
				<input name="type.score" class="readonly" readonly="readonly" type="text" size="30" alt=""/>
      </p>
      <p>
        <label>登记人: </label>
				<input name="teacher" type="text" size="30" alt="" readonly="readonly" value="{{username}}"/>
      </p>
		</div>
		<div class="formBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div></li>
				<li>
					<div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
				</li>
			</ul>
		</div>
	</form>
</div>
