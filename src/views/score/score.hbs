<form id="pagerForm" method="post" action="">
	<input type="hidden" name="status" value="${param.status}">
	<input type="hidden" name="keywords" value="${param.keywords}" />
	<input type="hidden" name="pageNum" value="1" />
	<input type="hidden" name="numPerPage" value="19" />
</form>


<div class="pageHeader">
	<form onsubmit="return navTabSearch(this);" action="demo_page1.html" method="post">
	<div class="searchBar">
		<table class="searchContent">
			<tr>
        <td>
					 学生名称: <input type="text" name="keyword" />
				</td>
			</tr>
		</table>
		<div class="subBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div></li>
			</ul>
		</div>
	</div>
	</form>
</div>
<div class="pageContent">
	<div class="panelBar">
		<ul class="toolBar">
			<li><a class="add" href="/score/scores/create" target="navTab" width="600" height="400"><span>添加</span></a></li>
			<li><a class="delete" href="/score/scores/delete?uid={sid_uid}" target="ajaxTodo" title="确定要删除吗?"><span>删除</span></a></li>
			<li><a class="edit" href="/score/scores/edit?uid={sid_uid}" target="dialog"><span>修改</span></a></li>
		</ul>
	</div>
	<table class="table" width="100%" layoutH="138">
		<thead>
			<tr>
        <th width="120">加分/减分原因</th>
        <th width="120">分值</th>
        <th width="120">学生姓名</th>
        <th width="120">学生学号</th>
        <th width="120">学生班级</th>
        <th width="120">登记人</th>
				<th width="80">创建时间</th>
				<th width="80">更新时间</th>
			</tr>
		</thead>
		<tbody>
			{{#each scores}}
				<tr target="sid_uid" rel={{id}}>
					<td>{{type}}</td>
          <td>{{score}}</td>
          <td>{{student}}</td>
					<td>{{code}}</td>
          <td>{{class}}</td>
          <td>{{teacher}}</td>
					<td>{{createdAt}}</td>
					<td>{{updatedAt}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	<div class="panelBar">
		<div class="pages">
			<span>共{{count}}条</span>
		</div>

		<div class="pagination" targetType="navTab" totalCount={{totalCount}} numPerPage="19" pageNumShown="5" currentPage="{{currentPage}}"></div>

	</div>
</div>
